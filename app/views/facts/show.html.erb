<% if !@fact.metadatas.blank? %>
<h3><%= I18n.t("site.comments") %></h3>
  <% for metadata in @fact.metadatas %>
    <p><%= metadata.comment %></p>
  <% end %>
<% else %>
  
<% end %>

<% form_tag "#{facts_path}/#{@fact.id}/metadatas" do |f| -%>
<p>
  <%= I18n.t("site.comment") %><br />
  <%= text_area :metadata, :comment, :size => "30x3" %>
</p>
<%= submit_tag I18n.t("site.send")%>
<% end -%>
