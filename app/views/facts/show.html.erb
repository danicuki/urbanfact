	<li>
      <a href="#" class="selected_menu"><%= @fact.small_description %></a>
  </li>
<% end -%>
<p>
  <b>Description:</b>
  <%=h @fact.description %>
</p>

<p>
  <%= image_tag(@fact.image_url) %>
</p>

<p>
  <b>Score:</b>
  <%=h @fact.score %>
</p>
