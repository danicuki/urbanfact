<script type="text/javascript" src="/javascripts/map.js"></script>        
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<div class="div_map">
	<div id="map_canvas">
		Loading...
	</div>
	<script type="text/javascript">
		var markers = [
			<% @facts.each do |fact| %>
						{lat: "<%=fact.lat%>", lng: "<%=fact.lng%>", description: "<%=escape_javascript(fact.description)%>", url: "<%=url_for fact%>", kind: "<%= fact.score_kind %>" },
			<% end %>
						{}						
					  ];
	</script>
</div>